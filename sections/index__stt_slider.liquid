{% schema %}
  {
    "name": "STT Slider",
    "class": "stt-slider",
    "settings": [
      {
        "type": "textarea",
        "id": "html_content",
        "label": "HTML",
        "default": "<div class='container is-flex is-justify-center'><h2 class='title'>Your own custom HTML</h2></div>"
      },
	  {
        "type": "url",
        "id": "main_image_url",
        "label": "Main Image URL"
      },
	  {
        "type": "image_picker",
        "id": "main_image_desktop",
        "label": "Main Image desktop"
      },
	  {
        "type": "image_picker",
        "id": "main_image_mobile",
        "label": "Main Image mobile"
      },
	  {
        "type": "url",
        "id": "image_url",
        "label": "Image URL"
      },
	  {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Image desktop"
      },
	  {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Image mobile"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "width",
        "label": "Width",
        "default": "standard",
